<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:tooltip="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="PicketMobile.Views.Students.StudentProfilePage"
              xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI.Controls"
             xmlns:shareModel ="clr-namespace:SharedModel.Responses;assembly=SharedModel"
             xmlns:viewModel="clr-namespace:PicketMobile.Views.Students"
              Shell.NavBarIsVisible="False"
             BackgroundImageSource="{AppThemeBinding Light=background.jpg, Dark=backgrounddark.jpg}"
             Title="Profile">
    <ScrollView>
        <VerticalStackLayout Padding="30,0" x:DataType="viewModel:StudentProfilePageViewModel">
            <Label Text="Profile" Style="{StaticResource  pageTitle}"></Label>
            <StackLayout Margin="30">
                <tooltip:AvatarView WidthRequest="100" HeightRequest="100" CornerRadius="75" 
                                  BackgroundColor="#56d388" ImageSource="{Binding Photo}" Text="{Binding Initial}"></tooltip:AvatarView>
            </StackLayout>
            <StackLayout Margin="10">
                <Label   Text="NIS/NISN"/>
                <Entry IsReadOnly="True" Text="{Binding NomorRegistrasi}" Placeholder="NIS/NISN"></Entry>
            </StackLayout>

            <StackLayout Margin="10">
                <Label    Text="Nama"/>
                <Entry IsReadOnly="True" Text="{Binding Profile.Name}" Placeholder="Nama"></Entry>
            </StackLayout>

            <StackLayout Margin="10">
                <Label   Text="Jenis Kelamin"/>
                <Entry IsReadOnly="True" Text="{Binding Profile.Gender}" Placeholder="Jenis Kelamin"></Entry>
            </StackLayout>

            <StackLayout Margin="10">
                <Label   Text="Tempat Lahir"/>
                <Entry IsReadOnly="True" Text="{Binding Profile.PlaceOfBorn}" Placeholder="Tempat Lahir"></Entry>
            </StackLayout>


            <StackLayout Margin="10">
                <Label   Text="Tanggal Lahir"/>
                <Entry IsReadOnly="True" Text="{Binding Profile.DateOfBorn}" Placeholder="Tanggal Lahir"></Entry>
            </StackLayout>

            <StackLayout Margin="10">
                <Label   Text="Email"/>
                <Entry IsReadOnly="True" Text="{Binding Profile.Email}" Placeholder="Email"></Entry>
            </StackLayout>

            <zxing:BarcodeGeneratorView Grid.Row="1" WidthRequest="150" HeightRequest="150" 
       ForegroundColor="Black"
       BackgroundColor="White"
       Value="{Binding Profile.NISN}"
       Format="QrCode"
       Margin="1">
                <zxing:BarcodeGeneratorView.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding KartuPelajarCommand}">
                    </TapGestureRecognizer>
                </zxing:BarcodeGeneratorView.GestureRecognizers>
            </zxing:BarcodeGeneratorView>

            <Button Margin="20,10" Command="{Binding LogoutCommand}" Text="Logout"></Button>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>